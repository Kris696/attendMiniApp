/* components/statisticsResult/statisticsResult.wxss */
@import "/static/iconfont/iconfont.wxss";

.checkContainer{
  height: 100%;
  background-color: #f2f2f2;
}

/* 头部 */

.checkHeader{
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #fff;
  border: 2rpx solid #bbbbbb;
}

.checkHeader .des{
  margin-left: 20rpx;
  font-size: 36rpx;
  color: #888;
}

.checkHeader .rollTime{
  display: flex;
  justify-content: space-around;
  width: 300rpx;
  background-color: #e5f3ff;
  border: 2rpx solid #0389ff;
  font-size: 32rpx;
  color: #0389ff;
}

.checkHeader .iconfont{
  font-size: 56rpx;
}

/* 数据统计 */

.checkCount{
  display: flex;
  margin-top: 20rpx;
  padding: 52rpx 0 32rpx;
  height: 200rpx;
  background-color: #fff;
  border: 2rpx solid #bbbbbb;
}

.checkCount .checkCountItem{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 2rpx solid #bbb;
}

.checkCount .qj{
  border: 0 none;
}

.checkCount .num{
  font-size: 48rpx;
  color: #0389ff;
}

/* 内容 */
.checkMain{
  /* height: 300rpx; */
  margin-top: 20rpx;
  /* padding: 52rpx 0 32rpx; */
  background-color: #fff;
  border: 2rpx solid #bbbbbb;
}



/* 全勤 */
.fullAttendance{
  display: flex;
  justify-content: space-around;
  margin: 160rpx auto;
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border:2rpx solid #67c23a;
  border-radius: 8rpx;
}

.fullAttendance .iconfont{
  color: #67c23a;
}

/* 按钮 */
.btnBox{
  display: flex;
  justify-content: space-around;
  margin: 60rpx auto;
  width: 80%;
}
.btn{
  width: 40%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #1989fa;
  background-color: #e6f1fc;
  border:2rpx solid #a3d0fd;
  border-radius: 8rpx;
}
