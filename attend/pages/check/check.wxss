/* pages/check/check.wxss */
page,.checkContainer{
  background-color: #f2f2f2;
}

/* 头部 */

.checkHeader{
  display: flex;
  justify-content: space-between;
  height: 120rpx;
  line-height: 120rpx;
  background-color: #fff;
  border: 2rpx solid #bbbbbb;
}

.checkHeader .des{
  margin-left: 20rpx;
  font-size: 36rpx;
  color: #888;
}

.checkHeader .rollTime{
  display: flex;
  justify-content: space-around;
  width: 300rpx;
  background-color: #e5f3ff;
  border: 2rpx solid #0389ff;
  font-size: 32rpx;
  color: #0389ff;
}

/* 数据统计 */

.checkCount{
  display: flex;
  margin-top: 20rpx;
  padding: 52rpx 0 32rpx;
  height: 200rpx;
  background-color: #fff;
  border: 2rpx solid #bbbbbb;
}

.checkCount>view{
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-right: 2rpx solid #bbb;
}

.checkCount>view:last-child{
  border: 0 none;
}

.checkCount .num{
  font-size: 48rpx;
  color: #0389ff;
}

/* 内容 */

.noArrivePerson,
.leavePerson{
  margin-top: 20rpx;
  background-color: #fff;
  border: 2rpx solid #bbbbbb;
}

.noArriveHeader,
.leaveHeader{
  display: flex;
  align-items: center;
  padding: 0 50rpx;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #bbbbbb;
  font-size: 36rpx;
}

.noArriveHeader .iconfont,
.leaveHeader .iconfont{
  margin-right: 30rpx;
  color: #0389ff;
  font-size: 60rpx;
}

/* 全勤 */
.fullAttendance{
  display: flex;
  justify-content: space-around;
  margin: 160rpx auto;
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  border:2rpx solid #67c23a;
  border-radius: 8rpx;
}

.fullAttendance .iconfont{
  color: #67c23a;
}

/* 保存按钮 */
button{
  margin: 60rpx 0;
  color: #1989fa;
  background-color: #e6f1fc;
  border:2rpx solid #a3d0fd;
}